# Server Configuration
PORT=3005

# Redis Configuration (for BullMQ)
REDIS_HOST=redis
REDIS_PORT=6379

# SMTP Configuration (for Email Notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM=noreply@workflow.com

# Firebase Configuration (for Push Notifications)
# Option 1: Service Account JSON (preferred)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk@your-project-id.iam.gserviceaccount.com"}

# Option 2: Project ID only (uses Application Default Credentials)
# FIREBASE_PROJECT_ID=your-project-id

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=workflow
DB_USER=workflow_user
DB_PASSWORD=workflow_pass
